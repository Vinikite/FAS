@model List<FAS.WebUI.Models.ChangeUserViewModel>
@{
    ViewBag.Title = "HomeI Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <script>
        var app = angular.module('myApp', ['ngAnimate']);
    </script>

<br /><br />
<div class="text-info h1 caption col-md-12">система учета личных финансов</div><br /><br />
@foreach (var user in Model)
{
<div class="text-info h1 caption col-md-3">
    @if (user.FirstName == null)
    {
        <a class="active" href="@Url.Action("Create", "Home")">
            <h5 class="brand brand-user">Добавте данные пользователя </h5>
        </a>
    }
    else
    {
        <a class="active" href="@Url.Action("Change", "Home")">
            <h5 class="brand brand-user">Измените данные пользователя </h5>
        </a>
    }
    <br />
    <img src="~/img/2.png" class="show" title="thanks for coming"><br />

</div>

    <div   class="text-info h5 caption col-md-6">
       <h5>@ViewBag.Greeting @user.FirstName @user.MiddleName!</h5>
        

    </div>
    <div ng-hide="myCheck" class="text-info h1 caption col-md-3">

    </div>

    break;
}
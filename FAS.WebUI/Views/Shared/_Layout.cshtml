@using FAS.WebUI.Models



<!DOCTYPE html>
<html>
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.js"></script>
    <script src="/lib/angular-1.4.8.min.js"></script>
    <script src="/lib/angular-animate-1.4.8.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – FAS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="myApp">

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("FAS – Finance Accounting System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>

                @if (HttpContext.Current.Request.IsAuthenticated)//Request.IsAuthenticated
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <li>
                                @Html.ActionLink("Здравствуйте, " + HttpContext.Current.User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                            </li>
                            <li>
                                <a href="@Url.Action("Logout", "Account")">
                                    <span class="glyphicon glyphicon-log-in"></span> Выйти
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar--collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a class="active" href="@Url.Action("IndexHome", "Home")">
                                    <span class="brand">Профиль</span>
                                </a>
                            </li>

                            <li>
                                <a class="active" href="@Url.Action("Home", "Score")">
                                    <span class="brand">Мои счета</span>
                                </a>
                            </li>
                            <li>
                                <a class="active" href="@Url.Action("Index", "Transaction")">
                                    <span class="brand">Транзакции</span>
                                </a>
                            </li>
                            <li>
                                <a class="active" href="@Url.Action("Home", "Bank")">
                                    <span class="brand">Банк</span>
                                </a>
                            <li>
                            <li>
                                <a class="active" href="@Url.Action("Index", "Statistics")">
                                    <span class="brand">Статистика</span>
                                </a>
                            <li>
                            <li>@Html.ActionLink("О программе", "About", "Home")</li>
                            <li>

                                @Html.ActionLink("Контакт", "Contact", "Home")
                            </li>
                        </ul>
                        <form role="search" class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" placeholder="Найти" class="form-control">
                            </div>
                        </form>
                    </div>
                }
                else
                {

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                        </ul>
                    </div>

                }
            </div>
        </div>
        <div class="container body-content">
            <hr />
            @RenderBody()
            <hr />
        </div>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year – FAS </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

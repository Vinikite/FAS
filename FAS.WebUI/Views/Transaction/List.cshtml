@model List<TransactionItemModel>

@if (Model.Count == 0)
{
    <div class="col-md-10 center-block">
        <div class="text-danger h3">Нет транзакций</div>
        <img src="~/img/3.jpg" class="show" title="param"><br />
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Примечание</td>
                <td>Сумма</td>
                <td>Дата</td>
                <td>Тип транзакции</td>
                <td>Категория</td>
                <td>Счет</td>
                <td>Банк</td>
                @if (User.Identity.IsAuthenticated)
                {
                     <td></td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Notation</td>
                    <td>$@t.Comission</td>
                    <td>@t.CreatedOn.ToString()</td>
                    <td>@t.Type</td>
                    <td>@t.Category</td>
                    <td>@t.Score</td>
                    <td>@t.Bank</td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>
                            <a href="@Url.Action("Delete", "Transaction", new { id = t.Id })" title="Удалить">
                                <span class="glyphicon glyphicon-floppy-remove"></span>
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}



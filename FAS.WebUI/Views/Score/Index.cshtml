@model List<FAS.WebUI.Models.ScoreItemModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="h2">Счета</div>
    <div class="row-fluid">
        <div class="col-md-3">
            <div><a href="@Url.Action("Create", "Score")">Добавить лицевой счет</a></div>
            @*<div><a href="@Url.Action("Change", "Score")">Изменить лицевой счет</a></div>*@
            <div><a href="@Url.Action("IndexHome", "Home")">Профиль</a></div>
        </div>

        <div class="col-md-9">
            @if (Model.Count == 0)
            {
                <div class="col-md-10 center-block">
                    <div class="text-danger h3">Нет добавленных счетов</div>
                    <img async src="~/img/Банковский-счет-2.jpg" class="show" title="param"><br />
                </div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>Имя счета</td>
                            <td>Вид счета</td>
                            <td>Тип счета</td>
                            <td>Статус</td>
                            <td>Остаток на счете</td>
                            <td>Дата открытия</td>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <td></td>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Score in Model)
                        {
                            <tr>
                                <td>@Score.Name</td>
                                <td>@Score.ViewType</td>
                                <td>@Score.Type</td>
                                <td>@Score.Status</td>
                                <td>@Score.Balance</td>
                                <td>@Score.CreatedOn.ToString()</td>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <td>
                                        <a href="@Url.Action("Delete", "Score", new { id = Score.Id })">
                                            <span class="glyphicon glyphicon-floppy-remove"></span> Удалить
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
@model List<FAS.WebUI.Models.SimpleScoreViewModel>
@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
        var chart1;
        var chart2;

        makeCharts("light", "#FFFFFF");
        function makeCharts(theme, bgColor, bgImage) {

            if (chart1) {
                chart1.clear();
            }
            if (chart2) {
                chart2.clear();
            }

            // background
            if (document.body) {
                document.body.style.backgroundColor = bgColor;
                document.body.style.backgroundImage = "url(" + bgImage + ")";
            }
        }
</script>
<div class="container-fluid">

    <div class="row-fluid">
        <nav class="navmenu navmenu-default navmenu-fixed-left" role="navigation">
            <h2>Счета</h2>
        </nav>
        <div class="navmenu-fixed-left col-lg-4 navbar-fixed">
            <a class="active" href="@Url.Action("Create", "Score")">
                <span class="brand brand-user">Добавить лицевой счет </span>
            </a><br>
            <a class="active" href="@Url.Action("Change", "Score")">
                <span class="brand brand-user">Изменить лицевой счет </span>
            </a><br>
            <a class="active" href="@Url.Action("IndexHome", "Home")">
                <span class="brand brand-user">Профиль </span>
            </a><br>
        </div>

       

        <div class="col-md-8">
            @if (Model.Count == 0)
            {
                <div class="col-md-10 center-block">
                    <div class="text-danger h3">Нет добавленных счетов</div>
                    <img src="~/img/3.jpg" class="show" title="param"><br />
                </div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>Имя счета</td>
                            <td>Вид счета</td>
                            <td>Тип счета</td>
                            <td>Статус</td>
                            <td>Остаток на счете</td>
                            <td>Дата открытия</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Score in Model)
                        {
                            <tr>
                                <td>@ViewBag.Scores</td>
                                <td>@Score.IdViewScore</td>
                                <td>$@Score.IdTypeScore</td>
                                <td>@Score.StatusScore</td>
                                <td>@Score.Balance</td>
                                <td>@Score.CreateOn</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
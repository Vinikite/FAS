@model FAS.WebUI.Models.ChangeScoreViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление счета</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ChangeScoreViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2 control-label"><strong>Выберите вид счета</strong></div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdViewScore, ViewBag.ViewScores as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdViewScore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label"><strong>Выберите тип счета</strong></div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdTypeScore, ViewBag.TypeScores as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTypeScore, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label"><strong>Выберите статус счета</strong></div>
            <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdStatus, ViewBag.StatusScores as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdStatus, "", new { @class = "text-danger" })
</div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label"><strong>Дайте имя счету</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notation, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label"><strong>Баланс счета</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
